snippet # "Interpolated Code"
#{$1}$0
endsnippet

snippet "^enc" "# encoding: UTF-8" !r
# encoding: UTF-8
$0
endsnippet

snippet "^# ?[uU][tT][fF]-?8?" "# encoding: UTF-8" !r
# encoding: UTF-8
$0
endsnippet

snippet con "context"
context '${1:context}' do
  $0
end
endsnippet

snippet des "describe"
describe '${1:description}' do
  $0
end
endsnippet

snippet it "It"
it '${1:does something}' do
  $0
end
endsnippet

snippet itp "It pending"
it '${1:does something}'
endsnippet
